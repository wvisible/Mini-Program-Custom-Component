/* pages/components/spinner/spinner.wxss  */
.spinner {
  margin-left: 32rpx;
  margin-right: 32rpx;
}
.select {
  height: 64rpx;
  border: 2rpx solid #dddddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}
.select-text {
  font-size: 32rpx;
  color: #999999;
  flex: 1;
  padding-left: 20rpx;
}
.select-img {
  height: 48rpx;
  width: 48rpx;
  transition: transform 0.3s;
}
.select-img-rotate {
  transform: rotate(180deg);
}
.option-box {
  background: #ffffff;
  border: 2rpx solid #dddddd;
  overflow-y: hidden;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 8rpx;
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: height 0.3s;
  position: absolute;
  z-index: 1000;
  width: 91%;
}
.option {
  font-size: 32rpx;
  color: #333333;
  padding-left: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
  height: 64rpx;
  line-height: 64rpx;
}

